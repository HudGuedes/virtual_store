<% if category.errors.full_messages.any? %>
  <% category.errors.full_messages.each do |error_message| %>
    <%= error_message if category.errors.full_messages.first == error_message %> <br />
  <% end %>
<% end %>
<%= form_for @category, url: { action: action } do |f| %>
	<div class="form-group">
		<label>Parent</label>
		<%= f.collection_select(:parent_id, categories, :id, :name_with_parents, { include_blank: 'Selecione'}, { class:'form-control' }) %>
  	</div>
	<div class="form-group">
		<label>Nome</label>
  		<%= f.text_field :name, class: 'form-control' %>
  	</div>
  <%= f.submit action == :create ? 'Criar categoria' : 'Editar categoria', class: 'btn btn-primary' %>
<% end %>