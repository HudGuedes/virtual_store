<h2>
	Categorias
	<%= link_to 'Nova Categoria', new_admin_category_path, class: 'btn btn-primary float-right'%>
</h2>
<hr/>

<% if @categories.empty? %>
	<%= alert('Nenhuma categoria encontrada', 'info')%>
<% else %>
	<table class="table table-striped">
		<thead class="thead-dark">
			<tr>
				<th>ID</th>
				<th>Nome</th>
				<th>#</th>
			</tr>
		</thead>
		<tbody>
			<% @categories.each do |category|%>
				<tr>
					<td><%= category.id %></td>
					<td><%= category.name_with_parents %></td>
					<td>
						<div class="dropdown">
						  <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						    Opcções
						  </a>
						  <div class="dropdown-menu">
						  	<%= link_to 'Editar', edit_admin_category_path(category.id), class: 'dropdown-item'%>
						  	<%= link_to 'Deletar', admin_category_path(category.id), method: :delete, class: 'dropdown-item'%>
						  </div>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% end %>